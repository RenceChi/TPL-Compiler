<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<!-- Enhanced Modern Layout with Premium Buttons -->
<BorderPane stylesheets="@style.css" fx:controller="CompilerController" prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
    </padding>

    <!-- LEFT SIDE: Button Panel -->
    <left>
        <VBox prefHeight="650.0" prefWidth="240.0" spacing="18.0" BorderPane.alignment="CENTER" style="-fx-background-color: transparent;">
            <children>
                <!-- File Operations -->
                <Button fx:id="btnOpen" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleOpen" text="ðŸ“ Open File">
                    <padding>
                        <Insets bottom="14.0" top="14.0" />
                    </padding>
                    <font>
                        <Font name="Poppins Bold" size="14.0" />
                    </font>
                </Button>

                <!-- Analysis Buttons -->
                <Button fx:id="btnLexical" disable="true" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleLexical" text="ðŸ”¤ Lexical Analysis">
                    <padding>
                        <Insets bottom="14.0" top="14.0" />
                    </padding>
                    <font>
                        <Font name="Poppins Bold" size="14.0" />
                    </font>
                </Button>

                <Button fx:id="btnSyntax" disable="true" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleSyntax" text="ðŸ“ Syntax Analysis">
                    <padding>
                        <Insets bottom="14.0" top="14.0" />
                    </padding>
                    <font>
                        <Font name="Poppins Bold" size="14.0" />
                    </font>
                </Button>

                <Button fx:id="btnSemantic" disable="true" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleSemantic" text="ðŸ” Semantic Analysis">
                    <padding>
                        <Insets bottom="14.0" top="14.0" />
                    </padding>
                    <font>
                        <Font name="Poppins Bold" size="14.0" />
                    </font>
                </Button>

                <!-- Spacer for visual separation -->
                <Label text="" prefHeight="20.0" />

                <!-- Clear Button -->
                <Button fx:id="btnClear" disable="false" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleClear" text="Clear All">
                    <padding>
                        <Insets bottom="14.0" top="14.0" />
                    </padding>
                    <font>
                        <Font name="Poppins Bold" size="14.0" />
                    </font>
                </Button>
            </children>
            <padding>
                <Insets right="20.0" top="10.0" />
            </padding>
        </VBox>
    </left>

    <!-- CENTER: Text Areas with Enhanced Labels -->
    <center>
        <VBox spacing="12.0" BorderPane.alignment="CENTER" style="-fx-background-color: transparent;">
            <children>
                <!-- Analysis Result Section -->
                <Label text="ðŸ“Š Analysis Result:">
                    <font>
                        <Font name="Poppins Bold" size="16.0" />
                    </font>
                </Label>
                <TextArea fx:id="txtResult" editable="false" prefHeight="250.0" prefWidth="200.0" promptText="Analysis results will appear here..." wrapText="true">
                    <font>
                        <Font name="JetBrains Mono" size="15.0" />
                    </font>
                </TextArea>

                <!-- Source Code Section -->
                <Label text="ðŸ’» Source Code:">
                    <font>
                        <Font name="Poppins Bold" size="16.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="15.0" />
                    </VBox.margin>
                </Label>
                <TextArea fx:id="txtCode" editable="true" prefHeight="250.0" prefWidth="200.0" promptText="Type or load your Java code here..." VBox.vgrow="ALWAYS" wrapText="false">
                    <font>
                        <Font name="JetBrains Mono" size="15.0" />
                    </font>
                </TextArea>
            </children>
            <padding>
                <Insets left="10.0" />
            </padding>
        </VBox>
    </center>
</BorderPane>